<h1>New Person</h1>

<%= turbo_frame_tag "new_person", target: "_top"  do %>
  <%= form_with model: [ @person.event, @person ], html: { class: "flex justify-between max-w-md mx-auto" } do |form| %>
    <%= form.text_field :name, class: "bg-gray-100 appearance-none border-2 rounded  py-2 px-4 my-2 text-gray-700 leading-tight focus:outline-none focus:bg-white border-purple-500"%>
    <%= form.submit "Add person", class: "shadow bg-purple-500 hover:bg-purple-600 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded my-2" %>
  <% end %>
<% end %>
<%= link_to 'Back', @person.event %>
