<div id="<%= dom_id person %>" class="flex items-center justify-between max-w-md mx-auto bg-gray-100 rounded my-2">
  <p class="text-gray-700 leading-tight mx-auto">
  <%= person.name %>
  </p>
  <%- if  person.claimed? %>
    <p class="shadow bg-purple-300 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded my-1">
    Claimed
    </p>
  <%- else %>
    <div data-controller="claim" data-person="<%= person.id %>">
      <button data-claim-target="button" data-action="click->claim#call" class="shadow bg-purple-500 hover:bg-purple-600 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded my-1">Claim</button>
    </div>
  <% end %>
</div>
