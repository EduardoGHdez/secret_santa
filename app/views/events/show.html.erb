<div data-controller="event" class="container flex flex-col lg:w-1/2 w-full bg-white shadow rounded px-8 pt-6 pb-8 mb-4 mx-auto">
  <h1 class="title text-3xl mb-8 mx-auto text-center font-bold text-purple-700">Secret Santa 🎅🏽</h1>
  <%= turbo_stream_from @event %>
  <%= turbo_frame_tag "new_person", src: new_event_person_path(@event), target: "_top" %>
  <%= render partial: "draw_names", locals: { event: @event } %>
  <br/>
  <hr/>
  <br/>
  <div id="people">
    <%= render  partial: "person", collection: @event.persons%>
  </div>
</div>

<p id="notice"><%= notice %></p>
